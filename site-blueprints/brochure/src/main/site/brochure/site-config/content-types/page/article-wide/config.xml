<content-type name="/page/article-wide" is-wcm-type="true">
<label>Article Wide</label>
<form>/page/article-wide</form>
<form-path>simple</form-path>
<model-instance-path>NOT-USED-BY-SIMPLE-FORM-ENGINE</model-instance-path>
<file-extension>xml</file-extension>
<content-as-folder>true</content-as-folder>
<previewable>true</previewable>
<noThumbnail>false</noThumbnail>
<image-thumbnail>image.jpg</image-thumbnail>
 <paths>
     <includes>
         <pattern>^/site/website/.*</pattern>
     </includes>
     <excludes>
		<pattern>^/site/website/forms/.*</pattern>
     </excludes>
  </paths>
</content-type>